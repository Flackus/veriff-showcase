<a
    class="watch-link"
    href="{{@link}}"
    {{on "click" (fn this.doVerification @do_verification)}}
>
    Play Movie
</a>
{{#if @do_verification}}
    <script src="https://cdn.veriff.me/sdk/js/1.1/veriff.min.js"></script>
    <script src='https://cdn.veriff.me/incontext/js/v1/veriff.js'></script>
    <div class="verification verification_display_none">
        <div id="veriff-root" />
    </div>
{{/if}}
