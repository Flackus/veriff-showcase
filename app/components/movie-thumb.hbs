<li>
    <LinkTo @route="movie" @model={{@movie.id}}>
        <h4 title={{@movie.title}}>{{@movie.title}}</h4>
        {{#if @movie.vote_average}}
            <span class="rating {{rating-grade @movie.vote_average}}">{{rating-value @movie.vote_average}}</span>
        {{/if}}
        {{#if @movie.poster_path}}
            <img src="https://image.tmdb.org/t/p/w220_and_h330_face/{{@movie.poster_path}}" alt="Movie poster" />
        {{else}}
            <div class="no-image" />
        {{/if}}
    </LinkTo>
</li>
